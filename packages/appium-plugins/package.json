{
  "name": "appium-plugins-monorepo",
  "private": true,
  "devDependencies": {
    "chai": "4.x",
    "chai-as-promised": "7.x",
    "eslint": "^7.14.0",
    "eslint-config-appium": "^4.5.0",
    "lerna": "^3.22.1",
    "mocha": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "pre-commit": "1.x",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "sinon": "^9.0.0",
    "ts-mocha": "^8.0.0",
    "typescript": "^4.1.2"
  },
  "scripts": {
    "clean": "run-p clean:* && npm install && npm run bootstrap",
    "clean:modules": "rimraf node_modules && rimraf packages/*/node_modules",
    "clean:pkglock": "rimraf package-lock.json && rimraf packages/*/package-lock.json",
    "build": "node ./scripts/build.js",
    "watch": "node ./scripts/build.js --watch",
    "bootstrap": "lerna bootstrap --hoist",
    "test:lint": "eslint --cache packages",
    "test:unit": "lerna run test:unit",
    "test:e2e": "lerna run test:e2e",
    "precommit:msg": "echo 'Running pre-commit checks...' && exit 0",
    "precommit:test": "npm run test:lint && npm run test:unit"
  },
  "pre-commit": [
    "precommit:msg",
    "precommit:test"
  ]
}
